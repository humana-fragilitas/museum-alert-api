{
  "name": "infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy:dev": "npm run build && cdk deploy --all --context stage=dev --require-approval never",
    "deploy:prod": "npm run build && cdk deploy --all --context stage=prod --require-approval never",
    "destroy:dev": "cdk destroy --all --context stage=dev --force",
    "destroy:prod": "cdk destroy --all --context stage=prod --force",
    "diff:dev": "cdk diff --all --context stage=dev",
    "diff:prod": "cdk diff --all --context stage=prod",
    "synth:dev": "cdk synth --all --context stage=dev",
    "synth:prod": "cdk synth --all --context stage=prod",
    "inventory": "./scripts/inventory.sh",
    "bootstrap:dev": "cdk bootstrap --context stage=dev",
    "bootstrap:prod": "cdk bootstrap --context stage=prod"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1022.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.206.0",
    "constructs": "^10.0.0",
    "dotenv": "^17.2.1",
    "source-map-support": "^0.5.21"
  }
}
